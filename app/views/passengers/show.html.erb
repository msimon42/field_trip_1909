<h1>Passenger <%= @passenger.id %></h1>
<p>Name: <%= @passenger.name %></p>

<h3>Flights</h3>
<% @passenger.flights.each do |flight| %>
  <%= link_to flight.number, "/flights/#{flight.id}" %>
<% end %>

<h3>Add Flight</h3>
<%= form_tag "/passenger/#{@passenger.id}/flights", method: :post do %>
  <%= label_tag :flight_number %>
  <%= text_field_tag :flight_number %>
  <%= submit_tag 'Submit' %>
<% end %>
